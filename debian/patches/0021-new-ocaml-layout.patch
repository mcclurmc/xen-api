diff --git a/Makefile b/Makefile
index b2a5c49..2ce32b1 100644
--- a/Makefile
+++ b/Makefile
@@ -7,6 +7,9 @@ MY_OUTPUT_DIR ?= $(CURDIR)/output
 MY_OBJ_DIR ?= $(CURDIR)/obj
