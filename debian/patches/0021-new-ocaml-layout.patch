diff --git a/ocaml/idl/OMakefile b/ocaml/idl/OMakefile
index bde01cd..8c14d2e 100644
--- a/ocaml/idl/OMakefile
+++ b/ocaml/idl/OMakefile
@@ -158,7 +158,7 @@ META: META.in
 	sed 's/@VERSION@/$(PRODUCT_VERSION)/g' < $< > $@
 
 if $(defined DESTDIR)
